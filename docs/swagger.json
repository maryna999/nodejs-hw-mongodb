          },
          "updatedAt": {
            "description": "Contacts updatedAt",
            "type": "string",
            "example": "2024-11-30T17:19:41.576+00:00"
          }
        }
      },
      "user": {
        "type": "object",
        "required": ["_id", "name", "email", "password"],
        "properties": {
          "_id": {
            "description": "User id",
            "type": "string",
            "example": "676c1cad155780ba49395352"
          },
          "name": {
            "description": "user full name",
            "type": "string",
            "example": "Jon Doil"
          },
          "email": {
            "description": "User email",
            "type": "string",
            "example": "trembo@mail.com"
          },
          "password": {
            "description": "Hashed user password stored in the database",
            "type": "string",
            "example": "$2b$10$ehfmT7JR9ypYhpGViQeeY.IeBX46h7r8IC5S0Xl2Q6UQ2Thn49gDS"
          },
          "role": {
            "description": "User role",
            "type": "string",
            "enum": ["user", "admin"]
          },
          "createdAt": {
            "description": "Contacts createdAt",
            "type": "string",
            "example": "2024-05-08T16:12:14.954182"
          },
          "updatedAt": {
            "description": "Contacts updatedAt",
            "type": "string",
            "example": "2024-11-30T17:19:41.576+00:00"
          }
        }
      }
    },
    "responses": {
      "400": {
        "description": "Bad Request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["status", "message", "data"],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 400
                },
                "message": {
                  "type": "string",
                  "example": "BadRequest"
                },
                "data": {
                  "type": "object",
                  "required": ["message"],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Request body is missing"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "NotFoundError",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["status", "message", "data"],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 404
                },
                "message": {
                  "type": "string",
                  "example": "NotFoundError"
                },
                "data": {
                  "type": "object",
                  "required": ["message"],
